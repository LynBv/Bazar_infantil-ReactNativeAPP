package br.org.serratec.dto;

import java.time.LocalDate;
import java.util.List;

import br.org.serratec.domain.Foto;
import br.org.serratec.domain.Postagem;
import br.org.serratec.domain.Usuario;

public class PostagemDTO {

	private Long id;

	private String texto;
	
	private Double preco;
	
	private LocalDate dataCriacao;

	private List<Foto> foto;

	private Usuario usuario;
	
	public PostagemDTO() {
	}

	public PostagemDTO(Long id, String texto, Double preco, LocalDate dataCriacao, List<Foto> foto, Usuario usuario) {
		this.id = id;
		this.texto = texto;
		this.preco = preco;
		this.dataCriacao = dataCriacao;
		this.foto = foto;
		this.usuario = usuario;
	}
	
	public PostagemDTO(Postagem postagem) {
		this.id = postagem.getId();
		this.texto = postagem.getTexto();
		this.preco = postagem.;
		this.dataCriacao = dataCriacao;
		this.foto = foto;
		this.usuario = usuario;
	}
}
